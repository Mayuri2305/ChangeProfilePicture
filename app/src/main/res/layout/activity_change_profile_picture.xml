<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.changeprofilepicture.ChangeProfilePictureActivity">
<RelativeLayout
    android:layout_width="210dp"
    android:layout_height="210dp">
  <com.example.changeprofilepicture.CustomUI.CircularImageView
      android:id="@+id/profile_imageview"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_gravity="center"
      android:padding="20dp"
      android:tint="@color/colorPrimary"
      android:src="@drawable/empty_profile_image"
    android:background="@drawable/circle_background"
      />

<ImageView
    android:id="@+id/get_proflie_imageview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/white_circle_background"
        android:src="@drawable/ic_camera_48dp"
        android:tint="@color/colorPrimary"/>

</RelativeLayout>
</LinearLayout>
